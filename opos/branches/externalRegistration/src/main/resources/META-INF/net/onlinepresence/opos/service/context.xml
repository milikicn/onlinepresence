<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="net.onlinepresence.opos.domain.service.AbstractManager" 
	class="net.onlinepresence.opos.domain.service.beans.AbstractManagerBean" 
	abstract="true"
	scope="prototype">
	<property name="reader">
		<ref bean="net.onlinepresence.opos.service.crud.impl.ReadCommand"/>
	</property>
	<property name="updater">
		<ref bean="net.onlinepresence.opos.service.crud.impl.UpdateCommand"/>
	</property>
	<property name="writer">
		<ref bean="net.onlinepresence.opos.service.crud.impl.WriteCommand"/>
	</property>
	<property name="deleter">
		<ref bean="net.onlinepresence.opos.service.crud.impl.DeleteCommand"/>
	</property>
	<property name="searcher">
		<ref bean="net.onlinepresence.opos.service.crud.impl.ExampleSearchCommand"/>
	</property>
</bean>

<bean id="net.onlinepresence.opos.domain.service.UserManager" 
	class="net.onlinepresence.opos.domain.service.beans.UserManagerBean" 
	parent="net.onlinepresence.opos.domain.service.AbstractManager" 
	scope="prototype">
	<property name="membershipDeleter">
		<ref bean="net.onlinepresence.opos.service.crud.impl.DeleteCommand"/>
	</property>
</bean>

<bean id="net.onlinepresence.opos.domain.service.ApplicationManager" 
	class="net.onlinepresence.opos.domain.service.beans.ApplicationManagerBean" 
	parent="net.onlinepresence.opos.domain.service.AbstractManager" 
	scope="prototype">
</bean>

<bean id="net.onlinepresence.opos.domain.service.KeyManager" 
	class="net.onlinepresence.opos.domain.service.beans.KeyManagerBean" 
	parent="net.onlinepresence.opos.domain.service.AbstractManager" 
	scope="prototype">
</bean>

<bean id="net.onlinepresence.opos.domain.service.AdministratorManager" 
	class="net.onlinepresence.opos.domain.service.beans.AdministratorManagerBean" 
	parent="net.onlinepresence.opos.domain.service.AbstractManager" 
	scope="prototype">
</bean>

</beans>