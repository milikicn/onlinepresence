<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="net.onlinepresence.opos.domain.Application" table="APPLICATION">
	
		<id name="webAddress" column="WEBADDRESS" type="string" />

		<property name="name"/>
		
		<set name="userMemberships" cascade="all" inverse="true">
           <key column="application"/>
           <one-to-many class="net.onlinepresence.opos.domain.Membership"/>
		</set>

	</class>
</hibernate-mapping>