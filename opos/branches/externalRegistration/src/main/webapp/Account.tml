<html t:type="layout" title="User details"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

	<h2 class="fontface">Settings</h2>
                        
	<ul class="miniMenu">
		<li><a class="btnAccDet" id="selected">Account details</a></li>
		<li> <t:pagelink class="btnConn"  t:page="Connections">Connections</t:pagelink></li>
	</ul>
	
	<div class="form">
    	<form t:type="Form" t:id="userDetailsForm"><t:errors />
    		<div class="formRow">
            	<label class="label">Username</label>
            	<div class="inputWrapper">
            		<div class="inputLeft"></div>
						
					<div class="inputCenter">
            			<input class="input" t:id="username" t:type="TextField" t:disabled="true"
							t:value="loggedUser.user.username" t:validate="required,minlength=4"/>
            		</div>
            		<div class="inputRight"></div>
            	</div>
            </div>
            
        	<div class="formRow">
            	<label class="label">Full name</label>
                <div class="inputWrapper">
                	<div class="inputLeft"></div>
                    <div class="inputCenter">
                       	<input class="input" t:id="name" t:type="TextField" 
							t:value="loggedUser.user.name" t:validate="required"/>
                    </div>
                        
                    <div class="inputRight"></div>
                </div>
            </div>
                          
            <div class="formRow">
            	<label class="label">E-mail</label>
            	<div class="inputWrapper">
            		<div class="inputLeft"></div>
						
					<div class="inputCenter">
            			<input class="input" t:id="email" t:type="TextField" 
							t:value="loggedUser.user.email" t:validate="required,minlength=4"/>
            		</div>
            		<div class="inputRight"></div>
            	</div>
            </div>
            
                                      
            <div class="formRow">
            	<label class="label">Password</label>
            	<div class="inputWrapper">
            		<div class="inputLeft"></div>
            		<div class="inputCenter">
            			<input class="input" t:id="password" t:type="PasswordField" 
							t:value="password" t:validate="required,minlength=4"/>
            		</div>
            		<div class="inputRight"></div>
            	</div>
            </div>
                          
            <div class="formRow">
            	<label class="label">Confirm password</label>
            	<div class="inputWrapper">
            		<div class="inputLeft"></div>
            		<div class="inputCenter">
            			<input class="input" t:id="passwordConfirmation" t:type="PasswordField" 
							t:value="passwordConfirmation" t:validate="required,minlength=4"/>
            		</div>
            		<div class="inputRight"></div>
            	</div>
            </div>

			<input id="submit" class="btnSave" type="submit" value="Save" />
			<a id="inline" href="#delete" class="btnDeleteAccSmall">Delete account</a>
		
		</form>
	</div>
	
	<div style="display: none;">
		<div id="delete">
			<div class="popupDiv">		
			<h3 class="fontface">Delete Account</h3>						    
				<div class="form">
					<form t:type="Form" t:id="deleteAccount">
						<p>Please note that this action is permanent and cannot be undone! </p>
	
						<input type="submit" class="btnDeleteAcc" value="Delete" /> 

					</form>
				</div>
			</div>    
		</div>
	</div>

	<div class="hr"></div>

</html>
