<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="net.onlinepresence.opos.domain.beans.UserBean" table="USERS">
	
		<id name="username" column="USERNAME" type="string" />
		
		<property name="name"/>
		<property name="email"/>
		<property name="password"/>
		<property name="activated"/>

		<set name="applicationMemberships" cascade="all" inverse="true">
           <key column="user"/>
           <one-to-many class="net.onlinepresence.opos.domain.beans.MembershipBean"/>
		</set>
		
	</class>
</hibernate-mapping>