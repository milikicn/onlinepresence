<html t:type="layout" title="Registration"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">

    <h2 class="fontface">Create account</h2>
						
	<div class="form">
    	<form t:type="Form" t:id="registrationForm"><t:errors />
        	<div class="formRow">
            	<label class="label">Full name</label>
                <div class="inputWrapper">
                	<div class="inputLeft"></div>
                    <div class="inputCenter">
                       	<input class="input" t:id="name" t:type="TextField" 
							t:value="user.name" t:validate="required"/>
                    </div>
                        
                    <div class="inputRight"></div>
                </div>
            </div>
                          
            <div class="formRow">
            	<label class="label">E-mail</label>
            	<div class="inputWrapper">
            		<div class="inputLeft"></div>
						
					<div class="inputCenter">
            			<input class="input" t:id="email" t:type="TextField" 
							t:value="user.email" t:validate="required,regexp"/>
            		</div>
            		<div class="inputRight"></div>
            	</div>
            </div>
            
            <div class="formRow">
            	<label class="label">Key</label>
            	<div class="inputWrapper">
            		<div class="inputLeft"></div>
						
					<div class="inputCenter">
            			<input class="input" t:id="key" t:type="TextField" 
							t:value="enteredKey" />
            		</div>
            		<div class="inputRight"></div>
            	</div>
            </div>
            
            <div class="formRow">
            	<label class="label">Username</label>
            	<div class="inputWrapper">
            		<div class="inputLeft"></div>
						
					<div class="inputCenter">
            			<input class="input" t:id="username" t:type="TextField" 
							t:value="user.username" t:validate="required,minlength=4"/>
            		</div>
            		<div class="inputRight"></div>
            	</div>
            </div>
                          
            <div class="formRow">
            	<label class="label">Password</label>
            	<div class="inputWrapper">
            		<div class="inputLeft"></div>
            		<div class="inputCenter">
            			<input class="input" t:id="password" t:type="PasswordField" 
							t:value="user.password" t:validate="required,minlength=4"/>
            		</div>
            		<div class="inputRight"></div>
            	</div>
            </div>
                          
            <div class="formRow">
            	<label class="label">Confirm password</label>
            	<div class="inputWrapper">
            		<div class="inputLeft"></div>
            		<div class="inputCenter">
            			<input class="input" t:id="passwordConfirmation" t:type="PasswordField" 
							t:value="passwordConfirmation"/>
            		</div>
            		<div class="inputRight"></div>
            	</div>
            </div>

		<input id="submit" class="btnCreate" type="submit" value="Create" />
		
		</form>
	</div>
                  
	<div class="contentRight">
 		<p>
 			Allready a member?<br />
			<t:pagelink t:page="Login">Sign in here</t:pagelink>.
		</p>
	</div>

	<div class="hr"></div>

</html>
