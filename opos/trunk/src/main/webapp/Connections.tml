<html t:type="layout" title="Application Selection"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">
      
	<h2 class="fontface">Settings</h2>
                        
	<ul class="miniMenu">
		<li><t:pagelink t:page="Account" class="btnAccDet">Account details</t:pagelink></li>
		<li><t:pagelink id="selected" t:page="Connections" class="btnConn">Connections</t:pagelink></li>
	</ul>
	
	<t:if t:test="twitterAppSettings.userUssesApp">
		<a id="inline" href="#data1"><img class="icon" src="${asset:context:images/applications/icon-Twitter-on.png}" width="70" height="70" alt="" /></a>
		<p:else>
			<a id="inline" href="#data1"><img class="icon" src="${asset:context:images/applications/icon-Twitter-off.png}" width="70" height="70" alt="" /></a>
		</p:else>
	</t:if>
	
	<div style="display: none;">
		<div id="data1">
			<div class="popupDiv">
				<h3 class="fontface">Connect your Twitter account</h3>
								    
				<div class="form">
					<form t:type="Form" t:id="twitterForm">
						<div class="formRow">
							<label class="label"><span class="twitter-logo">Sign Up</span></label>
							<div class="inputWrapper"></div>
						</div>

						<div class="formRowSmall">
			                <input class="checkBox" type="checkbox" />
			                <span class="withShadow">Send data to Twitter</span>
			            </div>
						<div class="formRowSmall">
			                <input class="checkBox" type="checkbox"/>
			                <span class="withShadow">Receive data from Twitter</span>
			            </div>	            
						
						<t:if t:test="twitterAppSettings.userUssesApp">
							<t:ActionLink t:id="deleteTwitter" class="btnDisconnect">Disconnect</t:ActionLink>
							<p:else>
								 <input type="submit" class="btnConnect" value="Connect" />
							</p:else>
						</t:if>
					</form>
				</div>
			</div>    
		</div>
	</div>
	
	<t:if t:test="facebookAppSettings.userUssesApp">
		<a id="inline" href="#data2"><img class="icon" src="${asset:context:images/applications/icon-Facebook-on.png}" width="70" height="70" alt="" /></a>
		<p:else>
			<a id="inline" href="#data2"><img class="icon" src="${asset:context:images/applications/icon-Facebook-off.png}" width="70" height="70" alt="" /></a>
		</p:else>
	</t:if>
	
	<div style="display: none;">
		<div id="data2">
			<div class="popupDiv">
				<h3 class="fontface">Connect your Facebook account</h3>
								    
				<div class="form">
					<form t:type="Form" t:id="facebookForm">
						<div class="formRow">
							<label class="label"><t:ActionLink class="facebook-logo" t:id="signUpFacebook">Sign Up</t:ActionLink></label>
							<div class="inputWrapper"></div>
						</div>

						<div class="formRowSmall">
			                <input class="checkBox" type="checkbox" />
			                <span class="withShadow">Send data to Facebook</span>
			            </div>
						<div class="formRowSmall">
			                <input class="checkBox" type="checkbox"/>
			                <span class="withShadow">Receive data from Facebook</span>
			            </div>	            
						
						<t:if t:test="facebookAppSettings.userUssesApp">
							<t:ActionLink t:id="deleteFacebook" class="btnDisconnect">Disconnect</t:ActionLink>
							<p:else>
								 <input type="submit" class="btnConnect" value="Connect" />
							</p:else>
						</t:if>
					</form>
				</div>
			</div>    
		</div>
	</div>
          
            
    <t:if t:test="sparkAppSettings.userUssesApp">
		<a id="inline" href="#data3"><img class="icon" src="${asset:context:images/applications/icon-Spark-on.png}" width="70" height="70" alt="" /></a>
		<p:else>
			<a id="inline" href="#data3"><img class="icon" src="${asset:context:images/applications/icon-Spark-off.png}" width="70" height="70" alt="" /></a>
		</p:else>
	</t:if>            
	
	<div style="display: none;">
		<div id="data3">		
			<div class="popupDiv">
			
				<h3 class="fontface">Connect your Spark account</h3>
							    
				<div class="form">
					<form t:type="Form" t:id="sparkForm">
						<div class="formRow">
							<label class="label">Username</label>
							
							<div class="inputWrapper">
								<div class="inputLeft"></div>
								<div class="inputCenter">
									<input class="input" t:id="sparkUsername" t:type="TextField" 
													t:value="sparkAppSettings.username" title="Spark username" tabindex="5" />
								</div>
								<div class="inputRight"></div>
							</div>
						</div>

						<div class="formRowSmall">
			                <input class="checkBox" type="checkbox" t:type="checkbox" t:value="sparkAppSettings.sendDataToApp" />
			                <span class="withShadow">Send data to Spark</span>
			            </div>
						<div class="formRowSmall">
			                <input class="checkBox" type="checkbox" t:type="checkbox" t:value="sparkAppSettings.receiveDataFromApp"/>
			                <span class="withShadow">Receive data from Spark</span>
			            </div>
											
						<t:if t:test="sparkAppSettings.userUssesApp">
							<input type="submit" class="btnUpdate" value="Update" /> 
							<t:ActionLink t:id="deleteSpark" class="btnDisconnect">Disconnect</t:ActionLink>
							<p:else>
								<input type="submit" class="btnConnect" value="Connect" /> 
							</p:else>
						</t:if>
					</form>
					
				</div>
			</div>
		</div>
	</div>
	
	<t:if t:test="foursquareAppSettings.userUssesApp">
		<a id="inline" href="#data4"><img class="icon" src="${asset:context:images/applications/icon-Foursquare-on.png}" width="70" height="70" alt="" /></a>
		<p:else>
			<a id="inline" href="#data4"><img class="icon" src="${asset:context:images/applications/icon-Foursquare-off.png}" width="70" height="70" alt="" /></a>
		</p:else>
	</t:if>            
	
	<div style="display: none;">
		<div id="data4">		
			<div class="popupDiv">
			
				<h3 class="fontface">Connect your Foursquare account</h3>
							    
				<div class="form">
					<form t:type="Form" t:id="foursquareForm">
						<div class="formRow">
							<label class="label">Username</label>
							
							<div class="inputWrapper">
								<div class="inputLeft"></div>
								<div class="inputCenter">
									<input class="input" t:id="foursquareUsername" t:type="TextField" 
													t:value="foursquareAppSettings.username" title="Foursquare username" tabindex="5" />
								</div>
								<div class="inputRight"></div>
							</div>
						</div>
						
						<div class="formRow">
							<label class="label">Password</label>
							
							<div class="inputWrapper">
								<div class="inputLeft"></div>
								<div class="inputCenter">
									<input class="input" t:id="foursquarePassword" t:type="PasswordField" 
													t:value="foursquareAppSettings.password" title="Foursquare password" tabindex="5" />
								</div>
								<div class="inputRight"></div>
							</div>
						</div>

						<div class="formRowSmall">
			                <input class="checkBox" type="checkbox" t:type="checkbox" t:value="foursquareAppSettings.sendDataToApp" />
			                <span class="withShadow">Send data to Foursquare</span>
			            </div>
						<div class="formRowSmall">
			                <input class="checkBox" type="checkbox" t:type="checkbox" t:value="foursquareAppSettings.receiveDataFromApp"/>
			                <span class="withShadow">Receive data from Foursquare</span>
			            </div>
											
						<t:if t:test="foursquareAppSettings.userUssesApp">
							<input type="submit" class="btnUpdate" value="Update" /> 
							<t:ActionLink t:id="deleteFoursquare" class="btnDisconnect">Disconnect</t:ActionLink>
							<p:else>
								<input type="submit" class="btnConnect" value="Connect" /> 
							</p:else>
						</t:if>
					</form>
					
				</div>
			</div>
		</div>
	</div>
	
	            
    <t:if t:test="moodleAppSettings.userUssesApp">
		<a id="inline" href="#data5"><img class="icon" src="${asset:context:images/applications/icon-Moodle-on.png}" width="70" height="70" alt="" /></a>
		<p:else>
			<a id="inline" href="#data5"><img class="icon" src="${asset:context:images/applications/icon-Moodle-off.png}" width="70" height="70" alt="" /></a>
		</p:else>
	</t:if>  
	
	<div style="display: none;">
		<div id="data5">		
			<div class="popupDiv">
			
				<h3 class="fontface">Connect your Moodle account</h3>
							    
				<div class="form">
					<form t:type="Form" t:id="moodleForm">
						<div class="formRow">
							<label class="label">Username</label>
							
							<div class="inputWrapper">
								<div class="inputLeft"></div>
								<div class="inputCenter">
									<input class="input" t:id="moodleUsername" t:type="TextField" 
													t:value="moodleAppSettings.username" title="Moodle username" tabindex="5" />
								</div>
								<div class="inputRight"></div>
							</div>
						</div>
								
						<t:if t:test="moodleAppSettings.userUssesApp">
							<input type="submit" class="btnUpdate" value="Update" /> 
							<t:ActionLink t:id="deleteMoodle" class="btnDisconnect">Disconnect</t:ActionLink>
							<p:else>
								<input type="submit" class="btnConnect" value="Connect" /> 
							</p:else>
						</t:if>
					</form>
					
				</div>
			</div>
		</div>
	</div>
	
	<div class="hr"></div>
</html>
